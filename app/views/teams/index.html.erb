<div class="container">
  <%= link_to "Add new team", new_team_path, class: "btn btn-primary pull-right" %>
  <section class='space-20'></section>
    <% if @teams.any? %>
      <h2 class="text-center">All teams</h2>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th> </th>
            <th>Player One</th>
            <th>Player Two</th>
            <th>Total Wins</th>
            <th>Team Win %</th>
          </tr>
        </thead>
        <tbody>
          <% @teams.each_with_index do |team, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= link_to "View Team", team_path(team), class: "" %></td>
              <td><%= team.team_player_one %></td>
              <td><%= team.team_player_two %></td>
              <td><%= team.wins %></td>
              <td><%= team.team_win_percentage %>%</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No teams yet.<p>
    <% end %>
  </div>
